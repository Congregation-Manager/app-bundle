{% extends '@CongregationManagerApp/base.html.twig' %}

{% block title %}{{ 'cm.app_reset_password.meta_title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 m-auto text-center mt-5">

                {{ form_start(resetForm) }}
                <img class="mb-4" src="https://via.placeholder.com/72x57" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">{{ 'cm.app_reset_password.title'|trans }}</h1>

                {{ form_row(resetForm.plainPassword) }}

                <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'cm.app_reset_password.submit'|trans }}</button>
                {{ form_end(resetForm) }}

            </div>
        </div>
    </div>
{% endblock %}
