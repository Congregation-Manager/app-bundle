{% extends '@CongregationManagerApp/base.html.twig' %}

{% block title %}{{ 'cm.app_login.meta_title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 m-auto text-center mt-5">

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('app_login_check') }}" method="post">
                    <img class="mb-4" src="https://via.placeholder.com/72x57" alt="" width="72" height="57">
                    <h1 class="h3 mb-3 fw-normal">{{ 'cm.app_login.title'|trans }}</h1>

                    <div class="form-floating">
                        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'cm.app_login.email_placeholder'|trans }}" >
                        <label for="username">{{ 'cm.label.email_address'|trans }}</label>
                    </div>

                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'cm.app_login.password_placeholder'|trans }}">
                        <label for="password">{{ 'cm.label.password'|trans }}</label>
                    </div>

                    <div class="checkbox mt-2 mb-3">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me"> {{ 'cm.label.remember_me'|trans }}
                        </label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'cm.label.signin'|trans }}</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 m-auto text-center mt-5">
                <a href="{{ path('app_forgot_password_request') }}">{{ 'cm.app_login.forgot_password'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
